<div id="uploadImageContainer" class="modal fade"  tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content" >
		<div class="modal-header text-center">
			<h4 class="modal-title w-100 font-weight-bold">Add image</h4>
			<button id="closeModalBtn" type="button" class="close" data-dismiss="modal" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
        </div>
		<div class="modal-body mx-3">
		 <form id="file-upload-form" action="/AddFlower" enctype="multipart/form-data" method="POST">
			<div class="md-form mb-5">
				<i class="fab fa-pagelines prefix grey-text"></i>
				<input type="text" name="name" id="flower-name" class="form-control validate" required>
				<label data-error="wrong" data-success="right" for="flower-name">Name</label>
			</div>
			<div class="md-form mb-5">
				<i class="fas fa-palette prefix grey-text"></i>
				<input type="text"name="color" id="flower-color" class="form-control validate" required>
				<label data-error="wrong" data-success="right" for="flower-color">Color</label>
			</div>
			<div class="md-form mb-5">
				<i class="fas fa-dollar-sign prefix grey-text"></i>
				<input type="text" name="price" id="flower-price" class="form-control validate" required>
				<label data-error="wrong" data-success="right"  for="flower-price">Price</label>
			</div>
			<div class="form-group file-area ">
			<div class="md-form mb-5">	
				<i class="fab fa-internet-explorer prefix grey-text"></i>			
				<input type="text" name="src" id="imagesUrl" class="form-control validate"  multiple="multiple" />
				<label data-error="wrong" data-success="right"  for="imagesUrl">Url Image</label>
			</div>
			<div >
				<input type="file" id="images" accept="images/*" name="imgUpload"/>
			</div>

			</div>
		</div>
		<div class="modal-footer d-flex justify-content-center">
			<input type="submit" id="btnsubmitUploadFlower" class="btn btn-default" data-dismiss="modal"></button>
		</div>
		</form>		
		</div>
	</div>
</div>
		
		
